class Solution {
    public int canCompleteCircuit(int[] gas, int[] cost) {
        int totalGas=0;
        int totalCost =0;
        for(int i =0;i<gas.length;i++){
            totalGas += gas[i];
            totalCost += cost[i];
        }
        if(totalGas<totalCost) return -1;

        int start =0;
        int petrol =0; 
        for(int i =0;i<gas.length;i++){
         petrol += gas[i] -cost[i];
         if(petrol<0){
            start =i+1;
            petrol =0;
         }
        }
        return start;
    }
}
