class Solution {
    public void sortColors(int[] nums) {
      Arrays.sort(nums);
      }
}

class Solution {
    public void sortColors(int[] nums) {
     int count0 =0;int count1 =0;int count2 =0;
     for(int num:nums){
        if(num==0)count0++;
        if(num==1)count1++;
        if(num==2)count2++; 
     }
      int idx =0;
      for(int i =0;i<count0;i++)nums[idx++] =0;
      for(int i =0;i<count1;i++)nums[idx++] =1;
      for(int i =0;i<count2;i++)nums[idx++] =2;
    }
}
